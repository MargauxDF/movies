{% extends 'base.html.twig' %}

{% block title %}Imdb films{% endblock %}

{% block body %}
    <div class="container full-screen d-flex justify-content-center align-items-center">
        <div class="row g-3">
            <h2 class="text-center mt-5">Search for a movie</h2>
            <div class="container">
                <div class="col-12 mx-auto">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                <button class="btn-primary mb-5 mt-1" type="submit">search</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row g-3">
            {% if form.vars.submitted %}
                {% for detail in details %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <img class="card-img-top" src="{{ detail.poster }}" alt="Poster of the movie">
                            <div class="card-body">
                                <h3 class="card-title">{{ detail.title }}</h3>
                                <p class="card-text">Released in {{ detail.year }} </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
